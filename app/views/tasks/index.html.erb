<div class='container'>
  <h1>My Tasks</h1>
  <div class='board-white'>
    <ul>
      <% @tasks.each do |task| %> 
        <li>
          <%= task.completed ? '✔' : '✖' %>
            <%= link_to task_path(task.id) do%>
            <%= task.title %> 
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='button'>
    <%= link_to 'New task', new_task_path, class:'link' %>
  </div>
</div>